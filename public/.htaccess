# Enable clean URLs for Next.js static export output (*.html files).
# This lets /crypto-market-maker resolve to /crypto-market-maker.html.

Options -MultiViews

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Do not rewrite real files or directories.
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # If a matching .html file exists, serve it.
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.+)$ $1.html [L]

  # If an index.html exists in a folder (for trailing-slash exports), serve it.
  RewriteCond %{REQUEST_FILENAME}/index.html -f
  RewriteRule ^(.+)$ $1/index.html [L]
</IfModule>
